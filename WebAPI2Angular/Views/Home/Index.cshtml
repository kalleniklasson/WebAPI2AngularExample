@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/css")
    </head>
<!-- ng-app defines the start of your application. You can the name inside "" should match the name of the mainmodule that you create -->
<body ng-app="app">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand"data-ui-sref="home">Angular Template</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a data-ui-sref="home">Handle</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div data-ui-view style="padding-top: 80px;"></div>
        @if (HttpContext.Current.IsDebuggingEnabled)
        {
    <!--Debug-->
            <div style="padding-top:800px;">
                $state = {{$state.current.name}}<br />
                $stateParams = {{$stateParams}}<br />
                $state full url = {{ $state.$current.url.source }}
            </div>
        }
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/vendor/angular")

    <!-- Load app main module -->
    @Scripts.Render("~/Scripts/app/app.js")
    <!-- Load configs -->
    @Scripts.Render("~/bundles/app/configs")
    <!-- Load services -->
    @Scripts.Render("~/bundles/app/services")
    <!-- Load controllers -->
    @Scripts.Render("~/bundles/app/controllers")
    <!-- Load custom filters -->
    @Scripts.Render("~/bundles/app/filters")
    <!-- Load custom directives -->
    @Scripts.Render("~/bundles/app/directives")
</body>
</html>



